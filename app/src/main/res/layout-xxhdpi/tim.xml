<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dim_foreground_disabled_material_light">

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:id="@+id/location"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="09dp"
            android:src="@drawable/location"
            android:background="@color/colorPrimaryDark"
            android:layout_marginRight="02dp"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:focusableInTouchMode="false"
            android:scaleType="fitCenter"
            android:tint="#ffffff"
            android:paddingTop="05dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp" />

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:id="@+id/shake"
            android:layout_alignTop="@+id/location"
            android:layout_toEndOf="@+id/location"
            android:layout_marginLeft="02dp"
            android:layout_marginRight="09dp"
            android:cropToPadding="false"
            android:src="@drawable/number"
            android:scaleType="fitCenter"
            android:tint="#ffffff"
            android:paddingTop="25dp"
            android:paddingBottom="30dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@android:color/holo_green_dark" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:id="@+id/sound"
            android:layout_below="@+id/location"
            android:layout_toStartOf="@+id/shake"
            android:layout_alignEnd="@+id/shake"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="05dp"
            android:background="@android:color/holo_orange_light"
            android:cropToPadding="false"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            android:minHeight="150dp"
            android:minWidth="150dp"
            android:scaleType="fitStart"
            android:padding="10dp" />

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:id="@+id/pushup"
            android:layout_marginLeft="07dp"
            android:layout_below="@+id/sound"
            android:layout_toStartOf="@+id/shake"
            android:layout_marginTop="05dp"
            android:background="@android:color/holo_red_light"
            android:layout_marginRight="01dp"
            android:cropToPadding="false"
            android:src="@drawable/pushup"
            android:scaleType="fitCenter"
            android:padding="15dp"
            android:tint="#ffffff" />

        <ImageButton
            android:layout_width="169dp"
            android:layout_height="79dp"
            android:id="@+id/help"
            android:cropToPadding="false"
            android:layout_alignTop="@+id/pushup"
            android:layout_alignEnd="@+id/sound"
            android:focusableInTouchMode="false"
            android:adjustViewBounds="false"
            android:layout_alignParentStart="false"
            android:background="@color/highlighted_text_material_dark"
            android:layout_marginLeft="02dp"
            android:focusable="false"
            android:src="@drawable/help"
            android:scaleType="fitCenter"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:padding="15dp"
            android:tint="#ffffff" />

        <ImageButton
            android:layout_width="169dp"
            android:layout_height="79dp"
            android:id="@+id/aboutus"
            android:layout_below="@+id/help"
            android:layout_alignEnd="@+id/help"
            android:background="@color/highlighted_text_material_light"
            android:layout_marginTop="02dp"
            android:cropToPadding="false"
            android:src="@drawable/info"
            android:padding="18dp"
            android:scaleType="center"
            android:tint="#ffffff"
            android:layout_marginLeft="02dp" />

        <TextView
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TOUCH IN MODE"
            android:id="@+id/textView3"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:layout_above="@+id/shake"
            android:layout_alignStart="@+id/location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="LOCATION TRACKER"
            android:id="@+id/textView2"
            android:layout_above="@+id/sound"
            android:layout_alignStart="@+id/textView3"
            android:textAlignment="center"
            android:textSize="16dp"
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginBottom="05dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SHAKE POINTS"
            android:id="@+id/textView4"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_above="@+id/sound"
            android:layout_alignEnd="@+id/sound"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="05dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sound_analyzer"
            android:id="@+id/textView5"
            android:textAlignment="center"
            android:textStyle="bold"
            android:typeface="sans"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_marginBottom="41dp"
            android:layout_alignBottom="@+id/sound"
            android:layout_alignEnd="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PUSH UP&apos;S"
            android:id="@+id/textView6"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_alignBottom="@+id/aboutus"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="05dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="PRESS VOLUME_DOWN FOR TOUCH FREE MODE"
            android:id="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/shake"
            android:textAlignment="center"
            android:textSize="13dp"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"
            android:background="@color/dim_foreground_disabled_material_light"
            android:textStyle="bold"
            android:paddingTop="05dp"
            android:layout_marginRight="15dp" />

    </RelativeLayout>
</LinearLayout>